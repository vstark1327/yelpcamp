<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center">
			Edit CampGround <%= campground.name %>
		</h1>
		<div style="width:30%; margin: 30px auto;">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST"> 
				<div class="form-group">
					<label for="name">Name</label>
					<input class="form-control" type="text" name="campground[name]" placeholder="name" value="<%= campground.name %>">	
				</div>
				<label for="image">Image Url</label>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[image]" placeholder="img url" value="<%= campground.image %>">	
				</div>
				<div class="form-group">
					<label for="price">Price</label>
		        	<input class="form-control" type="number" name="campground[price]" placeholder="price" 
						   min="0.01" step="0.01" value="<%= campground.price %>">	
				</div>
				<div class="form-group">
				<label for="description">Description</label>	
				<input class="form-control" type="text" name="campground[description]" placeholder="description" value="<%= campground.description %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">
					Update
					</button>	
				</div>	
			</form>
			<a href="/campgrounds/<%= campground._id %>">Go Back</a>
		</div>
	</div>
</div>	
<%- include("../partials/footer") %>